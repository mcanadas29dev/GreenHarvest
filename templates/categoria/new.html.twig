{% extends 'base.html.twig' %}
{% block title %}Nueva Categoría{% endblock %}
{% block body %}
<div class="uk-container uk-margin-large-top uk-width-1-2@m uk-align-center">
    <div class="uk-card uk-card-default uk-card-body">
        <h2 class="uk-heading-line uk-text-center"><span>Nueva Categoría</span></h2>
        {{ form_start(form, {'attr':{'class':'uk-form-stacked'}}) }}

        {% for field in form %}
            {# No mostrar el campo _token en el loop #}
            {% if field.vars.name != '_token' %}
                <div class="uk-margin">
                    {{ form_label(field, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    <div class="uk-form-controls">
                        {{ form_widget(field, {'attr': {'class': 'uk-input'}}) }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {# Aquí renderizamos los campos que quedan, principalmente el _token oculto #}
        {{ form_rest(form) }}

        <div class="uk-margin">
            <button class="uk-button uk-button-primary">Guardar</button>
            <a class="uk-button uk-button-default" href="{{ path('app_categoria_index') }}">Volver</a>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
