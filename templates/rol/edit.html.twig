{% extends 'base.html.twig' %}

{% block title %}Editar Rol{% endblock %}

{% block body %}
<div class="uk-container uk-margin-large-top">
    <div class="uk-card uk-card-default uk-card-body uk-width-1-2@m uk-align-center">
        <h2 class="uk-heading-line uk-text-center">
            <span>{{ title|default('Editar Rol') }}</span>
        </h2>

        {{ form_start(form, {'attr': {'class': 'uk-form-stacked'}}) }}
            {% for field in form %}
                <div class="uk-margin">
                    {{ form_label(field, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    <div class="uk-form-controls">
                        {{ form_widget(field, {'attr': {'class': 'uk-input'}}) }}
                        {{ form_errors(field) }}
                    </div>
                </div>
            {% endfor %}

            <div class="uk-margin">
                <button class="uk-button uk-button-primary" type="submit">Guardar</button>
                <a class="uk-button uk-button-default" href="{{ path('app_rol_index') }}">Volver</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
